generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  trips     Trip[]
}

model Trip {
  id         Int      @id @default(autoincrement())
  title      String
  coverImage String
  startDate  DateTime
  endDate    DateTime
  owner      User     @relation(fields: [ownerId], references: [id])
  ownerId    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("trips")
}
